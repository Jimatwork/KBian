.audio-wp {
    display: none;
    margin-left: 4px;
    text-indent: 0;
    color: #519af2;
    cursor: pointer;
    font-size: 1em;
    font-weight: 400;
    vertical-align: middle
}
.audio-wp .audio-inner {
    display: inline-block;
    height: 20px
}
.audio-wp .audio-icon {
    display: inline-block;
    width: 4em;
    height: 4em;
    background: url(./icons/audio_1.png)
}
.audio-wp .audio-icon-2, .audio-wp .audio-icon-3 {
    position: relative;
    display: inline-block;
    width: 6px;
    height: 23px
}
.audio-wp .audio-icon-2 {
    margin-left: 3px;
    background-image: url(./icons/audio_2.png)
}
.audio-wp .audio-icon-3 {
    margin-left: -2px;
    background-image: url(./icons/audio_3.png)
}
.audio-wp .desc {
    position: relative;
    top: 0.5em;
    margin-left: 10px
}
.audio-wp.playing .audio-icon-2 {
    -webkit-animation: anim1 1.2s infinite;
    animation: anim1 1.2s infinite
}
.audio-wp.playing .audio-icon-3 {
    -webkit-animation: anim2 1.2s infinite;
    animation: anim2 1.2s infinite
}
