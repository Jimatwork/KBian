/*基本信息样式*/

.shou-top {
	padding: 5px 10px;
}

.shou-gaishu {
	padding: 0 5px;
}

.shuo-lein {
	height: 85px;
	background-color: #32d6c2;
	padding: 0 10px;
	margin-top: 15px;
}

.shuo-lein>div {
	color: #fff;
	text-align: right;
}

.shuo-lein>.shuo-leina {
	font-size: 28px;
	padding-top: 20px;
	font-family: "微软雅黑";
}

.shou-bottom {
	text-align: center;
	background-color: #f2f2f2;
	line-height: 35px;
	position: fixed;
	bottom: 0;
	width: 100%;
}

.shou-bottom>span {
	font-size: 12px;
}

.shou-bott {
	text-align: center;
	background-color: #f2f2f2;
	line-height: 35px;
	position: fixed;
	bottom: 0;
	width: 100%;
}

.shou-bott>span {
	font-size: 12px;
}